<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/select_organization"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listViewOrg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddNewOrg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/listViewOrg"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/listViewOrg"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="#09090C"
        app:elevation="4dp"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/listViewOrg" />


</RelativeLayout>